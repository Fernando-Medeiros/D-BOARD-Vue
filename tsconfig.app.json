{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "comps/*": ["./src/components/*"],
            "libs/*": ["./src/core/libs/*"],
            "routes/*": ["./src/router/*"],
            "services/*": ["./src/core/services/*"],
            "utils/*": ["./src/core/utils/*"],
            "views/*": ["./src/views/*"]
        }
    }
}
